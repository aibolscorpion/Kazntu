<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp">

    <Button
        android:id="@+id/bachelor_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Бакалавриат"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="20dp"
        android:onClick="startBachelorActivity"/>

    <Button
        android:id="@+id/master_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/bachelor_button"
        android:text="Магистратура"/>

    <Button
        android:id="@+id/phd_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/master_button"
        android:text="Докторантура"/>
</androidx.constraintlayout.widget.ConstraintLayout>